<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="system">
            <group id="cspmon" translate="label" type="text" sortOrder="2000" showInDefault="1">
                <label>Cspmon Settings</label>
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="endpoint" translate="label" type="text" sortOrder="20" showInDefault="1">
                    <label>Endpoint</label>
                    <validate>required-entry validate-url</validate>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                </field>
                <field id="sample_rate" translate="label" type="text" sortOrder="30" showInDefault="1">
                    <label>Sample Rate</label>
                    <validate>required-entry validate-digits</validate>
                    <comment>Percentage of requests that should report to the endpoint.</comment>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>
